<!--styles-->
<%- include('./partials/styles')%>
<!-- HEADER -->
<body>
  <header>
    <%- include('./partials/user-header')%>
  </header>
  <body>
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card">
            <div class="card-header">
              <h5 class="card-title">Enter OTP</h5>
            </div>
            <div class="card-body">
              <form action="/verify-otp" method="POST">
                <div class="mb-3">
                  <label for="otpInput" class="form-label">OTP</label>
                  <input type="text" class="form-control custom-input" id="otpInput" name="otp" required>
                </div>
                <button type="submit" class="btn btn-primary custom-button">Verify OTP</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <footer>
      <%- include('./partials/user-footer')%>
    </footer>	
  
    <!-- jQuery Plugins -->
    <%- include('./partials/javascript')%>
  
  </body>
</html>
