  <script>
    function addToCart(productId) {
      // Perform the logic to add the product with the given productId to the cart
      // You can make an AJAX request to your server to handle the cart functionality
      
      // Example AJAX request
      $.ajax({
        url: '/cart/add',
        method: 'POST',
        data: { productId },
        success: function(response) {
          // Handle the success response
          // You can show a success message or update the cart UI accordingly
          console.log('Product added to cart');
        },
        error: function(error) {
          // Handle the error response
          console.error('Error adding product to cart', error);
        }
      });
    }
  </script>
  
  
